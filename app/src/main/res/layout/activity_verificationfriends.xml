<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical"
    tools:context="com.example.wzs.myapplication.activity.VerificationFriendsActivity">

    <include layout="@layout/title_layout_verfication" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:text="你需要发送验证申请，等待对方通过" />

        <com.example.wzs.myapplication.weight.PasswordEditText
            android:id="@+id/addfried_remake"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:text="2323233"
            android:textColorHint="#eafff7"
            android:textCursorDrawable="@null"

            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>