<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_person_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray"
    android:orientation="vertical"
    tools:context="com.example.wzs.myapplication.activity.PersonDataActivity">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/base_action_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#767670"
        android:gravity="center_vertical"
        app:layout_heightPercent="10%h">

        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/navibar_icon_return"
            android:visibility="visible" />

        <TextView
            android:id="@+id/change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置密码"
            android:textColor="#e8fffb"
            android:textSize="16sp" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/app_white"
        android:paddingLeft="30dp"
        app:layout_heightPercent="20%h"
        app:layout_widthPercent="100%w">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="姓名"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/change_head"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_head_gril"
            app:layout_heightPercent="80%h"
            app:layout_widthPercent="23%w"
            circleimageview:civ_border_color="@color/login_register"
            circleimageview:civ_border_overlay="false"
            circleimageview:civ_border_width="2dp"
            circleimageview:civ_fill_color="@android:color/holo_blue_light" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/person_data_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="姓名"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/personal_enter_img" />

        <TextView
            android:id="@+id/change_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:paddingLeft="10dp"
            android:text="qqqqqeqweqeqq"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/person_data_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="ID"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/personal_enter_img" />

        <TextView
            android:id="@+id/change_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_toLeftOf="@+id/imageView3"
            android:paddingLeft="10dp"
            android:text="0000000"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/person_data_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#ffffff"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="性别"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/personal_enter_img" />

        <TextView
            android:id="@+id/change_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
            android:paddingLeft="10dp"
            android:text="男"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_gray" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/person_data_signature"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#ffffff"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="个性签名"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/personal_enter_img" />

        <TextView
            android:id="@+id/change_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toLeftOf="@+id/imageView0"
            android:layout_toStartOf="@+id/imageView0"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="无敌是多么的寂寞..."
            android:textColor="@color/app_black"
            android:textSize="14sp" />

    </com.zhy.android.percent.support.PercentRelativeLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/person_data_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="地区"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/personal_enter_img" />

        <TextView
            android:id="@+id/change_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toLeftOf="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView5"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="昌平"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/person_data_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="设置"
            android:textColor="@color/app_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/personal_enter_img" />/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
